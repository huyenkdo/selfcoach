<!-- Mon Profil Section -->
<div class="container mt-5 my-5 p-4 mrecap_container" >
  <div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h3 class="text-info" style="font-style: italic;">Mon profil</h3>
      <!-- Bouton d'édition pour Mon profil -->
      <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editProfileModal" style="border-color: #ff5a00;">
        <i class="fa-regular fa-pen-to-square" style="color: #ff5a00;"></i>
      </button>
    </div>
    <div class="col-12">
      <div class="p-3" style="background-color: #fffdd0; color: #333; border-radius: 5px;">
        <p><strong>Prénom :</strong> <%= @user.first_name %></p>
        <p><strong>Âge :</strong> <%= @user.age %></p>
        <p><strong>Poids :</strong> <%= @user.weight %> kg</p>
        <p><strong>VMA :</strong> <%= @user.vma %> km/h</p>
      </div>
    </div>
  </div>

  <!-- Mon Objectif Section -->
  <div class="row mt-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h3 class="text-info" style="font-style: italic;">Mon objectif</h3>
      <!-- Bouton d'édition pour Mon objectif -->
      <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editObjectiveModal" style="border-color: #ff5a00;">
        <i class="fa-regular fa-pen-to-square" style="color: #ff5a00;"></i>
      </button>
    </div>
    <div class="col-12">
      <div class="p-3" style="background-color: #fffdd0; color: #333; border-radius: 5px;">
        <p><strong>Type de course :</strong> Semi-Marathon</p>
        <p><strong>Date :</strong> <%= @program.race_date.strftime("%d/%m/%Y") %></p>
        <p><strong>Objectif :</strong> <%= @program.objective_time %> min</p>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <h3 class="text-info" style="color: #251672; font-style: italic;">Ma semaine type</h3>

      <% @sessions.each do |session| %>
        <div class="card mt-3" style="background-color: #f5f5dc; border-radius: 5px; padding: 10px;">
          <div class="card-body p-0">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-title" style="margin: 0; font-weight: bold;">
                <%= session.date.strftime("%A") %>
              </h5>
              <span style="font-size: 0.9rem; color: #808080;">
                <% if session.run.run_interval_time %>
                  <%= session.run.run_interval_time * session.run.run_interval_nbr %>min
                <% else %>
                  <%= session.run.run_interval_km %>km
                <% end %>
              </span>
            </div>
            <div class="mt-2">
              <div class="mb-1" style="background-color: #f4a460; color: #000; padding: 5px 10px; border-radius: 5px;">
                Course facile - <%= session.run.run_interval_km %>km à <%= session.run.run_interval_pace %>km/h
              </div>
              <div class="mb-1" style="background-color: #f4a460; color: #000; padding: 5px 10px; border-radius: 5px;">
                <%= session.run.run_interval_nbr %> × <%= session.run.run_interval_time %>min - Intervalles à <%= session.run.run_interval_pace %>km/h
              </div>
              <div class="mb-1" style="background-color: #f4a460; color: #000; padding: 5px 10px; border-radius: 5px;">
                Longue course - <%= session.run.run_interval_km %>km à <%= session.run.run_interval_pace %>km/h
              </div>
            </div>
            <p class="mt-3" style="font-style: italic; color: #555;">Difficulté</p>
            <div class="d-flex justify-content-center">
              <% session.run.difficulty.times do %>
                <span style="color: #ff5a00; font-size: 2rem; margin-right: 5px;">★</span>
              <% end %>
              <% (5 - session.run.difficulty).times do %>
                <span style="color: #d3d3d3; font-size: 2rem; margin-right: 5px;">★</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
 <div class="row mt-4">
      <div class="col-12 text-center">
        <p style="font-size: 1.5rem; font-weight: bold; color: black;"><strong>Total temps :</strong> 4h25</p>
        <p style="font-size: 1.5rem; font-weight: bold;color: black;"><strong>Nombre de séances :</strong> 4</p>
        <%= link_to "Let's Run", home_path, class: 'btn btn-primary text-white', style: "background-color: #005792; border-radius: 20px; padding: 10px 20px; font-size: 1.2rem;",  type: 'button'%>
      </div>
    </div>
</div>


<!-- Modal for Editing Profile -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="editProfileModalLabel" style="color: black;">Modifier les informations de profil</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="color: black;">
        <p>Utilisez le formulaire ci-dessous pour mettre à jour vos informations personnelles.</p>
        <hr>
        <%= form_with(model: @user, url: program_path(@program), method: :patch, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :first_name, "Prénom", style: "color: black;" %>
            <%= f.text_field :first_name, class: "form-control", style: "color: black;" %>
          </div>
          <div class="mb-3">
            <%= f.label :age, "Âge", style: "color: black;" %>
            <%= f.number_field :age, class: "form-control", style: "color: black;" %>
          </div>
          <div class="mb-3">
            <%= f.label :weight, "Poids (kg)", style: "color: black;" %>
            <%= f.number_field :weight, class: "form-control", style: "color: black;" %>
          </div>
          <div class="mb-3">
            <%= f.label :vma, "VMA (km/h)", style: "color: black;" %>
            <%= f.number_field :vma, class: "form-control", style: "color: black;" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.submit "Enregistrer", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal for Editing Objective -->
<div class="modal fade" id="editObjectiveModal" tabindex="-1" aria-labelledby="editObjectiveModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="editProfileModalLabel" style="color: black;">Modifier les informations d'objectif</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="color: black;">
        <p>Utilisez le formulaire ci-dessous pour mettre à jour vos objectifs.</p>
        <hr>
        <%= form_with(model: @program, url: program_path(@program), method: :patch, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :race_date, "Date de la course", style: "color: black;" %>
            <%= f.date_field :race_date, class: "form-control", style: "color: black;" %>
          </div>
          <div class="mb-3">
            <%= f.label :objective_time, "Objectif (min)", style: "color: black;" %>
            <%= f.number_field :objective_time, class: "form-control", style: "color: black;" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.submit "Enregistrer", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
