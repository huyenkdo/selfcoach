<!-- Mon Profil Section -->
<div class="container mt-5 my-5 p-4 mrecap_container" >
  <div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h3 class="fw-bold text-primary mb-3 fs-4" style="font-style: italic;">Mon profil</h3>
      <!-- Bouton d'édition pour Mon profil -->
      <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editProfileModal" style="border-color: #ff5a00;">
        <i class="fa-regular fa-pen-to-square" style="color: #ff5a00;"></i>
      </button>
    </div>
    <div class="col-12">
      <div class="p-3 text-info" style="background-color: #fffdd0; color: #333; border-radius: 5px;">
        <p><strong>Prénom :</strong> <%= @user.first_name %></p>
        <p><strong>Âge :</strong> <%= @user.age %></p>
        <p><strong>Poids :</strong> <%= @user.weight %> kg</p>
        <p><strong>VMA :</strong> <%= @user.vma %> km/h</p>
      </div>
    </div>
  </div>

  <!-- Mon Objectif Section -->
  <div class="row mt-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h3 class="fw-bold text-primary mb-3 fs-4" style="font-style: italic;">Mon objectif</h3>
      <!-- Bouton d'édition pour Mon objectif -->
      <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editObjectiveModal" style="border-color: #ff5a00;">
        <i class="fa-regular fa-pen-to-square" style="color: #ff5a00;"></i>
      </button>
    </div>
    <div class="col-12">
      <div class="p-3 text-info" style="background-color: #fffdd0; color: #333; border-radius: 5px;">
        <p><strong>Type de course :</strong> Semi-Marathon</p>
        <p><strong>Date :</strong> <%= @program.race_date.strftime("%d/%m/%Y") %></p>
        <p><strong>Objectif :</strong> <%= @program.objective_time %> min</p>
      </div>
    </div>
  </div>
 <!-- Ma semaine type Section -->
  <div class="row mt-4">
    <div class="col-12">
      <h3 class="fw-bold text-primary mb-3 fs-4" style="font-style: italic;">Ma semaine type</h3>

        <% @sessions.each do |session| %>
        <div class="card mt-3" style="background-color: #f5f5dc; border-radius: 5px; padding: 10px;">
          <div class="card-body p-0">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-title" style="margin: 0; font-weight: bold;">
                <%= session.date.strftime("%A") %>
              </h5>
              <span style="font-size: 0.9rem; color: #808080;">
                <% if session.run.run_interval_time %>
                  <%= session.run.run_interval_time * session.run.run_interval_nbr %>min
                <% else %>
                  <%= session.run.run_interval_km %>km
                <% end %>
              </span>
            </div>
            <div class="mt-2">
              <div class="mb-1" style="background-color: #ffcc99; color: #000; padding: 5px 10px; border-radius: 5px;">
                <%= session.run.kind %>
              </div>
              <div class="mb-1" style="background-color: #f4a460; color: #000; padding: 5px 10px; border-radius: 5px;">
                10 × 400m - 4:00km
              </div>
            </div>
            <p class="mt-3" style="font-style: italic; color: #555;">Difficulté</p>
            <div class="d-flex justify-content-center">
              <% session.run.difficulty.times do %>
                <span style="color: #ff5a00; font-size: 2rem; margin-right: 5px;">★</span>
              <% end %>
              <% (5 - session.run.difficulty).times do %>
                <span style="color: #d3d3d3; font-size: 2rem; margin-right: 5px;">★</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
 <div class="row mt-4">
      <div class="col-12 text-center text-info">
        <p style="font-size: 1.5rem; font-weight: bold;"><strong>Total temps :</strong> 4h25</p>
        <p style="font-size: 1.5rem; font-weight: bold;"><strong>Nombre de séances :</strong> 4</p>
        <button class="btn btn-info text-white" style="background-color: #005792; border-radius: 20px; padding: 10px 20px; font-size: 1.2rem;">Let's Run</button>
      </div>
    </div>
</div>

<!-- Modal for Editing Profile -->
<div class="modal-recap">
  <div class="modal fade" style="" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog text-info">
      <div class="modal-content" style="border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
        <div class="modal-header" style="border-bottom: 1px solid #e9ecef; border-radius: 12px 12px 0 0;">
          <h3 class="modal-title" id="editProfileModalLabel" style="">Modifier les informations de profil</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" style="">
          <p>Utilisez le formulaire ci-dessous pour mettre à jour vos informations personnelles.</p>
          <hr>
          <%= form_with(model: @user, url: program_path(@program), method: :patch, local: true) do |f| %>
            <div class="mb-3 text-info">
              <%= f.label :first_name, "Prénom: " %>
              <%= f.text_field :first_name, class: "form-control", style: "" %>
            </div>
            <div class="mb-3">
              <%= f.label :age, "Âge: ", style: "" %>
              <%= f.number_field :age, class: "form-control", style: "" %>
            </div>
            <div class="mb-3">
              <%= f.label :weight, "Poids (kg): ", style: "" %>
              <%= f.number_field :weight, class: "form-control", style: "" %>
            </div>
            <div class="mb-3">
              <%= f.label :vma, "VMA (km/h): ", style: "" %>
              <%= f.number_field :vma, class: "form-control", style: "" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
              <%= f.submit "Enregistrer", class: "btn btn-primary", style: "color: white" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal for Editing Objective -->
<div class="modal fade" id="editObjectiveModal" tabindex="-1" aria-labelledby="editObjectiveModalLabel" aria-hidden="true">
  <div class="modal-dialog text-info">
    <div class="modal-content" style="border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
        <div class="modal-header" style="border-bottom: 1px solid #e9ecef; border-radius: 12px 12px 0 0;">
        <h3 class="modal-title" id="editProfileModalLabel" style="">Modifier les informations d'objectif</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="">
        <p>Utilisez le formulaire ci-dessous pour mettre à jour vos objectifs.</p>
        <hr>
        <%= form_with(model: @program, url: program_path(@program), method: :patch, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :race_date, "Date de la course", style: "" %>
            <%= f.date_field :race_date, class: "form-control", style: "" %>
          </div>
          <div class="mb-3">
            <%= f.label :objective_time, "Objectif (min)", style: "" %>
            <%= f.number_field :objective_time, class: "form-control", style: "" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.submit "Enregistrer", class: "btn btn-primary", style: "color: white" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
