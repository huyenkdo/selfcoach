<!-- Mon Profil Section -->
<div class="start-background">
  <div class="container mt-5 my-5 p-4">
    <div class="row">
      <div class="col-12">
        <h2 class="text-uppercase fw-bold" style="color: #ff5a00;">Recap</h2>
      </div>
    </div>

      <div class="row">
        <div class="col-12">
          <div class="card text-white bg-info mb-3" style="border-radius: 15px;">
            <div class="card-body">
              <h5 class="card-title text-center">Mon profil</h5>
              <p class="card-text text-center">
                <strong><%= @user.first_name %> - <%= @user.age %> ans</strong><br>
                </p>
                <p class="card-text text-center">
                <div class="row text-center">
                <div class="col">
                  <p class="mb-0">Poids</p>
                  <p class="fw-bold"> <%= @user.weight %> kg</p>
                </div>
                <div class="col">
                  <p class="mb-0">VMA</p>
                  <p class="fw-bold"><%= @user.vma %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    <!-- Mon Objectif Section -->
    <div class="row">
      <div class="col-12">
        <h4 class="text-dark fw-bold">Mon objectif</h4>
        <!-- Bouton d'édition pour Mon objectif -->
        <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editObjectiveModal" style="border-color: #ff5a00;">
          <i class="fa-regular fa-pen-to-square" style="color: #ff5a00;"></i>
        </button>
        <div class="card text-center mb-3" style="border-radius: 15px;">
          <div class="card-body">
            <p class="card-text">
              <strong>Semi-Marathon le <%= @program.race_date.strftime("%d/%m/%Y") %></strong><br>
              <%= @program.objective_time %> min
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>



<!-- Ma semaine type Section -->
<div class="container mt-4">
  <div class="row">
    <div class="col-12 text-center">
      <h3 class="text-primary" style="font-weight: bold;">Ma semaine type</h3>
    </div>
  </div>

  <% @sessions.each do |session| %>
    <div class="row justify-content-center mb-3">
      <div class="col-10">
        <div class="card shadow-sm">
          <div class="card-body p-3">
            <!-- Icon and Day -->
            <div class="d-flex align-items-center mb-2">
              <div class="me-2">
                <img src="path-to-icon.png" alt="Icon" style="width: 30px; height: 30px;"> <!-- Replace with the correct path to the icon -->
              </div>
              <div class="flex-grow-1">
                <h5 class="card-title mb-0 text-left" style="font-weight: bold;">
                  <%= session.date.strftime("%A") %> <span style="font-weight: normal;">(<%= session.run.run_interval_time %>min)</span>
                </h5>
              </div>
              <div>
                <% session.run.difficulty.times do %>
                  <span class="text-warning">★</span>
                <% end %>
              </div>
            </div>

            <!-- Run details -->
            <div class="p-3" style="background-color: #f8d7da; border-radius: 10px;">
              <p class="mb-1" style="font-weight: bold;">Échauffement -20 min - <%= session.run.run_interval_km %>km</p>
              <p class="mb-0">10 x 400m - 5:55/min/km</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Total time and session count -->
  <div class="row justify-content-center mt-4">
    <div class="col-10">
      <div class="card text-white bg-primary" style="border-radius: 10px;">
        <div class="card-body d-flex justify-content-between align-items-center p-3">
          <div>
            <p class="mb-0"><strong>Total temps</strong></p>
            <p class="mb-0">4h25</p>
          </div>
          <div>
            <p class="mb-0"><strong>Nombre de séances</strong></p>
            <p class="mb-0"><%= @sessions.count %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Button -->
  <div class="row justify-content-center mt-3">
    <div class="col-10 text-center">
      <%= link_to 'Let\'s Run', home_path, class: 'btn btn-primary', style: 'border-radius: 25px; padding: 10px 40px; font-size: 1.2rem;' %>
    </div>
  </div>
</div>




  <!-- Ma semaine type Section -->

    <div class="row mt-4">
      <div class="col-12">
        <h3 class="text-primary text-center">Ma semaine type</h3>

        <% @sessions.each do |session| %>
          <div class="card custom-card text-center m-3"> <!-- Background color similar to the one in the image -->
            <div class="card-body">
              <!-- Date centered -->
              <h5 class="card-title mb-1">
                <%= session.date.strftime("%A") %>
              </h5>
              <!-- Distance below date -->
              <p class="text-muted" style="font-size: 0.9rem;">
                <% if session.run.run_interval_time %>
                  <%= session.run.run_interval_time * session.run.run_interval_nbr %> min
                <% else %>
                  <%= session.run.run_interval_km %> km
                <% end %>
              </p>

              <!-- Orange section centered -->
               <div class="d-flex justify-content-center">
            <p class="mb-1 text-center" style="background-color: #f4a460; color: #fff; padding: 5px 10px; border-radius: 5px;">
              <%= session.run.kind %> - <%= session.run.run_interval_time %>min - <%= session.run.run_interval_pace %>km/h
            </p>
          </div>

              <p class="mt-2"><strong>Difficulté :</strong></p>
              <p>
                <% session.run.difficulty.times do %>
                  <span class="text-warning">★</span>
                <% end %>
                <% (5 - session.run.difficulty).times do %>
                  <span class="text-muted">★</span>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

      <div class="row mt-4">
        <div class="col-12 text-center text-info">
          <p style="font-size: 1.5rem; font-weight: bold;"><strong>Total temps :</strong> 4h25</p>
          <p style="font-size: 1.5rem; font-weight: bold;"><strong>Nombre de séances :</strong> <%= @sessions.count %></p>
          <%= link_to 'Let\'s Run', home_path, class: 'btn btn-info text-white', style: 'background-color: #005792; border-radius: 20px; padding: 10px 20px; font-size: 1.2rem;', role: 'button' %>
        </div>
      </div>
  </div>
</div>






<!-- Modal for Editing Profile -->
<div class="modal-recap">
  <div class="modal fade" style="" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog text-info">
      <div class="modal-content" style="border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
        <div class="modal-header" style="border-bottom: 1px solid #e9ecef; border-radius: 12px 12px 0 0;">
          <h3 class="modal-title" id="editProfileModalLabel" style="">Modifier les informations de profil</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" style="">
          <p>Utilisez le formulaire ci-dessous pour mettre à jour vos informations personnelles.</p>
          <hr>
          <%= form_with(model: @user, url: program_path(@program), method: :patch, local: true) do |f| %>
            <div class="mb-3 text-info">
              <%= f.label :first_name, "Prénom: " %>
              <%= f.text_field :first_name, class: "form-control", style: "" %>
            </div>
            <div class="mb-3">
              <%= f.label :age, "Âge: ", style: "" %>
              <%= f.number_field :age, class: "form-control", style: "" %>
            </div>
            <div class="mb-3">
              <%= f.label :weight, "Poids (kg): ", style: "" %>
              <%= f.number_field :weight, class: "form-control", style: "" %>
            </div>
            <div class="mb-3">
              <%= f.label :vma, "VMA (km/h): ", style: "" %>
              <%= f.number_field :vma, class: "form-control", style: "" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
              <%= f.submit "Enregistrer", class: "btn btn-primary", style: "color: white" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
