<div data-controller="modal">
  <div>
    <div style="display: flex; justify-content: center;">
      <h1 style="font-size: 40px; font-weight: bold; color: #FF6B35; padding-top: 40px;">Programme</h1>
    </div>

    <%= custom_calendar(start_date: @start_date, events: @running_sessions, attribute: :date) do |date, running_sessions| %>

      <% running_sessions.each do |running_session| %>
        <div role="button" data-action="click->modal#open" data-url="<%= running_session_url(running_session) %>" style="margin-top: 10px; display: flex; align-items: center; justify-content: center; padding: 12px 10px; background: #f7c5a0; color: #004E89; border-radius: 22px;">
          <%= running_session.run.kind %>
        </div>
      <% end %>
    <% end %>
  </div>
   <div class="nav-bar-home-page container-fluid d-flex align-items-center justify-content-between">
    <%= link_to program_path(@program) do %>
      <button class="calendar-btn active"></button>
    <% end %>

    <%= link_to strava_sync_path do %>
      <button class="go-btn"><i class="fa-solid fa-person-running" style="font-size: xx-large;"></i></button>
    <% end %>

    <%= link_to home_path do %>
      <button class="profil-btn"></button>
    <% end %>
  </div>


  <div data-modal-target="modalElement" class="modal fade text-black" id="running-session-modal" tabindex="-1" aria-labelledby="running-session-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

      </div>
    </div>
  </div>
</div>
